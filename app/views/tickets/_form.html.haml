= form_for [@project,@ticket], :html => { :multipart => true } do |f|
  = f.error_messages
  %p
    = f.label :title
    %br
    = f.text_field :title
  %p
    = f.label :description
    %br
    = f.text_area :description
  
  = render 'tags/form'
    
  %p
    #files
      = render :partial => "files/form", :locals => { :number => 0 }
    = link_to "Add another file", 'javascript:', :id => 'add_another_file'
  = f.submit
